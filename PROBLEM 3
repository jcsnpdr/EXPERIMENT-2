#include<iostream>
#include <cmath>
#include <iomanip>
using namespace std;

int main()
{
   
   int x;
   double y, v,z;
   
   z= 2.5;
   
   cout << setprecision (2) << showpoint << fixed;
   cout << "enter the value of x: ";
   cin >> x;
   cout << "enter the value of y: ";
   cin >> y;
   
   switch (x)
   {
   	case 1:
   	 if (1<y && y <5)
   	 cout << "V= " << x*y*z;
   	 else
   	 cout << "V= " << x + (y/z);
   	break;
   	
   	case 2:
   	 if (y<=5)
   	 {
   		v= (x - y)/z;
	if (v>0)
   	 cout << "V= " << v;
   	else
   	 cout << "V= " << -(v);
	}
   	 else
   	 cout << "V= " << x- (sqrt(y+z));
   	break;
   	
	default:
		cout<< "V= " << x+y+z;
	break;
	 
   }
    return 0;
}
